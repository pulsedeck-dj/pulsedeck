{
  "name": "dj-app",
  "version": "0.3.6",
  "description": "PulseDeck macOS DJ desktop app",
  "author": "PulseDeck",
  "private": true,
  "main": "src/main.js",
  "scripts": {
    "dev": "env -u ELECTRON_RUN_AS_NODE electron .",
    "start": "env -u ELECTRON_RUN_AS_NODE electron .",
    "build:mac": "electron-builder --mac dmg --arm64 --x64",
    "build:dir": "electron-builder --dir"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "axios": "^1.8.2",
    "qrcode": "^1.5.4",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "7zip-bin": "^5.2.0",
    "electron": "31.7.7",
    "electron-builder": "24.13.3"
  },
  "build": {
    "appId": "com.pulsedeck.dj",
    "productName": "PulseDeck DJ",
    "npmRebuild": false,
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.music",
      "icon": "build/icon.icns",
      "target": [
        "dmg"
      ],
      "artifactName": "PulseDeck-DJ-${version}-${arch}.${ext}"
    },
    "dmg": {
      "writeUpdateInfo": false
    }
  }
}
